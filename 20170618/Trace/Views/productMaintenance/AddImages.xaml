<Window x:Class="Trace.Views.productMaintenance.AddImages "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trace.Views.productMaintenance"
                
        Title="AddImages" Height="300" Width="300">
    <Grid>
        <ScrollViewer x:Name="scrollViewer"
                  HorizontalScrollBarVisibility="Auto"
               
                  VerticalScrollBarVisibility="Auto">

            <Image Name="myImage" MouseWheel="MyImage_OnMouseWheel">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>

    </Grid>
</Window>


<!--MouseWheel="ScrollViewer_OnMouseWheel"-->